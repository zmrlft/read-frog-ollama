{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/public/**/*",
        "{projectRoot}/wxt.config.ts",
        "{projectRoot}/package.json",
        "{projectRoot}/pnpm-lock.yaml",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/postcss.config.cjs",
        "{projectRoot}/vitest.setup.ts"
      ],
      "outputs": ["{projectRoot}/.output", "{projectRoot}/.wxt"]
    },
    "build:firefox": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/public/**/*",
        "{projectRoot}/wxt.config.ts",
        "{projectRoot}/package.json",
        "{projectRoot}/pnpm-lock.yaml",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/postcss.config.cjs",
        "{projectRoot}/vitest.setup.ts"
      ],
      "outputs": ["{projectRoot}/.output", "{projectRoot}/.wxt"]
    },
    "test": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/vitest.*.ts",
        "{projectRoot}/tsconfig.json"
      ]
    },
    "test:cov": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/vitest.*.ts",
        "{projectRoot}/tsconfig.json"
      ],
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/eslint.config.*"
      ]
    },
    "type-check": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.json"
      ]
    }
  }
}
